@using DotNetFrameworkWebApp.Models
@using DotNetFrameworkWebApp.Code

@{
    ViewBag.Title = "Index";
}

<style>

    .panel-heading {
        background-color: #3c8dbc !important;
    }



        .panel-heading .panel-title a {
            color: #ffffff;
            font-size: 20px;
            font-family: serif;
        }
</style>
<div class="box">

    <div class="box-body">
        <div class="row">
            <div class="col-xs-12">

                <div class="panel-group" id="accordion">


                    <div class="btn-group" style="margin-top:20px;">
                        <a id="addeditPresenterModal" data-toggle="modal" href="@Url.Action("AddEditJobApplication","JobApplication")" data-target="#modal-add-edit-jobapplication" class="btn btn-primary">
                            <i class="fa fa-plus"></i>Add Job Details
                        </a>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse in">
                        <div class="box-body table-responsive">
                            <table id="grid-jobApplication-management" class="table table-bordered table-striped table-condensed">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th width="2%">#</th>
                                        @*<th>JobCode</th>*@
                                        <th>Title</th>
                                        <th>Minimum Qualification </th>
                                        <th>Job Description</th>
                                        <th>Application Last Date</th>
                                        <th style=" width: 150px;">Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>


                        </div>

                    </div>


                </div>

            </div>

        </div>
    </div>

</div>

@Html.Partial("_Modal", new Modal { ID = "modal-add-edit-jobapplication", AreaLabeledId = "modal-add-edit-jobapplication-label", Size = ModalSize.Large })
@Html.Partial("_Modal", new Modal { ID = "modal-delete-jobapplication", AreaLabeledId = "modal-delete-jobapplication-label", Size = ModalSize.Large })

@section scripts
{
    <script src="~/Scripts/Views/JobApplication.js"></script>">
    <script src="~/Scripts/global.js"></script>
    <script src="~/Scripts/jquery.dataTables.js"></script>
}





