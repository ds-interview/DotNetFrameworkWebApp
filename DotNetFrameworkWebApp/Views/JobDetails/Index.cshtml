@using DotNetFrameworkWebApp.Models.Comman
@using DotNetFrameworkWebApp.Code.Serialization

<style>

    .panel-heading {
        background-color: #3c8dbc !important;
    }



        .panel-heading .panel-title a {
            color: #ffffff;
            font-size: 20px;
            font-family: serif;
        }
</style>
<div class="box">
 

    <div class="box-body">
        <div class="row">
            <div class="col-xs-12">

                <div class="panel-group" id="accordion">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">Job Detail Manager</a>
                        </h4>
                    </div>

                    <div class="btn-group" style="margin-top:20px;">
                        <a id="addEditdepartmentmodal" data-toggle="modal" href="@Url.Action("AddEditJobDetails","JobDetails")" data-target="#modal-add-edit-jobdetails" class="btn btn-primary">
                            <i class="fa fa-plus"></i>Add Job Details
                        </a>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse in">
                        <div class="box-body table-responsive">
                            <table id="grid-job-management" class="table table-bordered table-striped table-condensed">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th width="2%">#</th>
                                        <th>Title</th>
                                        <th>Minimum Qualification </th>
                                        <th>Job Description</th>
                                        <th>Application Last Date</th>
                                        <th style=" width: 150px;">Action</th>

                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>


                        </div>

                    </div>


                </div>

            </div>

        </div>
    </div>

</div>

@Html.Partial("_Modal", new Modal { ID = "modal-add-edit-jobdetails", AreaLabeledId = "modal-add-edit-jobdetails-label", Size = ModalSize.Large })
@Html.Partial("_Modal", new Modal { ID = "modal-delete-jobdetails", AreaLabeledId = "modal-delete-jobdetails-label", Size = ModalSize.Large })

@section scripts
{



    <link href="~/Content/css/bootstrap-switch.css" rel="stylesheet" />
    <script src="~/Scripts/JobDetails/JobDetails.js"></script>
}